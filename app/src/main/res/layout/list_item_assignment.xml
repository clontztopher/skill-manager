<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assignmentListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="32dp"
    android:paddingTop="10dp"
    android:paddingEnd="32dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/assignmentTitleColumn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Assignment Title" />

    <TextView
        android:id="@+id/assignmentTopicColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Assignment Topic" />

    <TextView
        android:id="@+id/assignmentTypeColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Assignment Type" />

</LinearLayout>